<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="defaultlayout" template="/WEB-INF/views/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/views/tiles/sidebar.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp"/>
    </definition>

	<definition name="*" extends="defaultlayout">
		<put-attribute name="contents" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	
	<definition name="*/*" extends="defaultlayout">
		<put-attribute name="contents" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
    
</tiles-definitions>